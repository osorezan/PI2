<body>
<div style="height: 100%; width: 70%" >
    {{> MoviesListView}}
</div>

<div style="height:100%; width: 110px" >
    <h2>Collections</h2>
    <ul style="height:100%; width:110px">
        {{#each MovieCollections}}
            <li style="height:100%; width:110px"><p><a href="../MovieCollections/{{name}}">{{name}}</a></p></li>
        {{/each}}
        <li style="height:100%; width: 20%"><form  style="height:100%; width: 20%"action="../MovieCollections" method="post">
            Add Collection:<br>
            <input type="text" name="name">
            <br>
            <input type="submit" value="Submit">
        </form></li>
    </ul>
</div>

